<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Account</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link href="/vendor/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/user/my-account.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
    <link href="/css/user/home.css" rel="stylesheet">
</head>

<body class="bg-light">
    <%- include('components/navbar') %>
        <div class="container pt-4">
            <div class="row">
                <div class="col-12 col-md-3">
                    <div class="row">
                        <div class="card mb-3 p-2 bg-white border rounded cardBg">
                            <div class="row">
                                <div class="col-12 col-md-3">
                                    <img src="/img/DigMart.png" style="width:100%">
                                </div>
                                <div class="col-12 col-md-9 mt-3">
                                    <label style="text-align: center;">
                                        <b> Hawaiza Siddiqui </b>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="card mb-3 p-3 bg-white border rounded cardBg">
                            <div class="row">
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-box-open fa-lg iconFormat"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1">
                                    <a href="/orders" class="labelFormat">
                                        <b> Recent Orders </b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card mb-3 p-3 bg-white border rounded cardBg">
                            <div class="row">
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-user-alt fa-lg iconFormat"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1 mb-4">
                                    <label class="labelFormat">
                                        <b> ACCOUNT SETTINGS </b>
                                    </label>
                                    <div class="mt-3">
                                        <a href="/account">Profile Information</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="/account/addresses">Manage Addresses</a>
                                    </div>
                                </div>
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-folder-open fa-lg iconFormat"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1 ">
                                    <label class="labelFormat">
                                        <b> MY STUFF </b>
                                    </label>
                                    <div class="mt-3">
                                        <a href="/wishlist">My Wishlist</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="#">My Coupons</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="#">My Reviews & Ratings</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="#">All Notifications</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="card mb-3 p-3 bg-white border rounded cardBg">
                            <div class="row">
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-sign-out-alt fa-lg iconFormat"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1">
                                    <a href="/login/logout" class="logoutFormat">
                                        <b> LOGOUT </b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-9">
                    <div class="card mb-3 bg-white border rounded cardBg">
                        <div class="card p-2 mb-0" style="background-color:#1e686dfa">
                            <strong>Recent Orders</strong>
                        </div>

                        <div class="card pt-2 pb-2 pe-4 ps-4" id="orderCard" style="background-color:#faffff;">
                            <% if(orderItemsData.length!=0) { var i=0; orderItemsData.forEach(function(data){ %>
                                <div class="row">
                                    <div class="card col-12 col-md-12" style="cursor:pointer">
                                        <div class="row">
                                            <div class="card-header">
                                                <div class="row">
                                                    <div class="col-6 col-md-6">
                                                        <label class="form-label mb-0" style="text-align:justify">
                                                            Order ID: <%=orderItemsData[i].orderID %>
                                                        </label>
                                                    </div>

                                                    <div class="col-6 col-md-6">
                                                        <label class="form-label mb-0" style="float:right; font-style: italic;">
                                                            Delivery Expected By <%= orderItemsData[i].deliveryDate %>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-10">
                                                <div class="row">
                                                    <div class="col-6 col-md-2 mt-2">
                                                        <%if(data.variantID){%>
                                                            <img src="<%=data.variantID.images[0] %>" class="w-100" onclick="openProduct( '<%=data.productID.slugID%>' , '<%=data.variantID.slugID%>')">
                                                            <%}else{%>
                                                                <img src="<%=data.productID.images[0] %>" class="w-100" onclick="openProduct( '<%=data.productID.slugID%>' , null)">
                                                                <%}%>
                                                    </div>
                                                    <div class="col-12 col-md-10">
                                                        <div class="row">
                                                            <div class="col-12 col-md-12">
                                                                <label class="form-label mt-2 mb-0" style="text-align:justify">
                                                                    <h6><b>
                                                                            <%= data.productID.productName %>
                                                                        </b></h6>
                                                                </label>
                                                            </div>

                                                            <%if(data.variantID){%>
                                                                <div class="col-12 col-md-12">
                                                                    <div class="row">
                                                                        <div class="col-4 col-md-4">
                                                                            <label class="form-label">Size: <b>
                                                                                    <%=data.size%>
                                                                                </b></label>
                                                                        </div>
                                                                        <div class="col-4 col-md-4">
                                                                            <label class="form-label">Colour: <b>
                                                                                    <%=data.colour%>
                                                                                </b></label>
                                                                        </div>
                                                                        <div class="col-4 col-md-4">
                                                                            <label class="form-label">Quantity: <b>
                                                                                    <%=data.quantity%>
                                                                                </b></label>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <% } else { %>
                                                                    <div class="col-12 col-md-12">
                                                                        <label class="form-label">Quantity: <b>
                                                                                <%=data.quantity%>
                                                                            </b></label>
                                                                    </div>
                                                                    <% } %>

                                                                        <div class="col-12 col-md-12">
                                                                            <% if(data.variantID){ %>
                                                                                <label class="form-label fs-5"><b>₹ <%=
                                                                                            data.variantID.sizes[0]["finalPrice"]
                                                                                            %></b></label>
                                                                                <% if(data.variantID.sizes[0]["discount"]!=null){
                                                                                    %>
                                                                                    <label class="form-label fs-6" style="color: gray"><strike>₹
                                                                                            <%=data.variantID.sizes[0]["actualPrice"]%>
                                                                                        </strike></label>
                                                                                    <label class="form-label fs-5" style="color: #249c50fa">
                                                                                        <%=
                                                                                            data.variantID.sizes[0]["discount"]%>
                                                                                            % off
                                                                                    </label>
                                                                                    <%}%>
                                                                                        <% } else { %>
                                                                                            <label class="form-label fs-5">
                                                                                                <b>₹ <%=
                                                                                                        data.productID.finalPrice%>
                                                                                                </b></label>
                                                                                            <% if(data.productID.discount!=null){
                                                                                                %>
                                                                                                <label class="form-label fs-6" style="color: gray">
                                                                                                    <strike>₹
                                                                                                        <%=data.productID.actualPrice%>
                                                                                                    </strike>
                                                                                                </label>
                                                                                                <label class="form-label fs-5" style="color: #249c50fa">
                                                                                                    <%= data.productID.discount
                                                                                                        %>% off
                                                                                                </label>
                                                                                                <%}%>
                                                                                                    <%}%>
                                                                        </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <div class="col-12 col-md-12">
                                                    <div class="row">
                                                        <div class="col-6 col-md-6">
                                                            <label class="form-label mb-0">Status: <b>
                                                                    <%= orderItemsData[i].status %>
                                                                </b> | <%= orderItemsData[i].date %></label>
                                                        </div>
                                                        <% if (orderItemsData[i].status=='Shipment' ) { %>
                                                            <div class="col-6 col-md-6">
                                                                <label style="float: right;" class="form-label mb-0">Delivery OTP: <b>
                                                                        <%= orderItemsData[i].delOTP %>
                                                                    </b></label>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% i++; }) %>
                                    <% } else { %>
                                        <div class="col-12" style="background-color: #ffffff;">
                                            <div class="text-center mt-3">
                                                <img src="/img/cart.png" width="200px">
                                                <h4 class="mt-3 mb-3" style="color: var(--bg-dark);">Your Order History is Empty</h4>
                                                <h6 style="font-size: 14px;">Let's start shopping, looks like you haven't placed an order yet!</h6>
                                                <a href="/#deals" class="btn btn-main mt-2 mb-2">Shop Now</a>
                                            </div>
                                        </div>
                                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/js/form-validator.js"></script>
        <script src="/js/user/cartprod.js"></script>
        <script src="/js/user/swiper-bundle.min.js"></script>
</body>

</html>
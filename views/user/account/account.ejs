<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Account</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link href="/vendor/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/user/my-account.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
    <link href="/css/user/home.css" rel="stylesheet">

</head>

<body class="bg-light">
    <%- include('../components/navbar') %>
        <div class="container pt-4">
            <div class="row">
                <%- include('../components/sidebar') %>

                    <div class="col-12 col-md-9">
                        <div class="card mb-3 bg-white border rounded cardBg">
                            <form method="post" id="form1" action="/account" class="needs-validation" novalidate accept-charset="utf-8">
                                <div class="col-12 col-md-12 mb-3">
                                    <div class="card p-2 mb-0" style="background-color:#1e686dfa">
                                        <div>
                                            <strong>
                                            PERSONAL INFORMATION</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-left:0%; margin-right: 0%;">
                                    <div class="col-12 col-md-12 mb-3">
                                        <label for="fullName" class="form-label mb-0">Full Name</label>
                                        <input type="text" id="fullName" name="fullName" placeholder="Enter your Name" value="<%= personalData.fullName %>" class="form-control" required>
                                        <div class="invalid-feedback">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 mb-3">
                                        <label for="email" class="form-label mb-0">Email Address</label>
                                        <input type="email" id="email" name="email" placeholder="Enter your Email Address" class="form-control" value="<%= personalData.email %>" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                                        <div class="invalid-feedback">
                                            Please enter valid email address.
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-12 mb-3">
                                        <label for="mobile" class="form-label mb-0">Mobile Number</label>
                                        <input type="number" id="mobile" name="mobile" value="<%= personalData.mobile %>" class="form-control" required disabled>
                                    </div>
                                    <div class="col-12 col-md-12">
                                        <label style="text-align: center;">
                                        <b> Your Gender </b>
                                    </label>
                                    </div>
                                    <div class="col-12 col-md-3 mb-3">
                                        <input type="radio" id="male" name="gender" value="male" class="form-check-input">
                                        <label for="male" class="form-label mb-0">Male</label>
                                    </div>
                                    <div class="col-12 col-md-3 mb-3">
                                        <input type="radio" id="female" name="gender" value="female" class="form-check-input">
                                        <label for="female" class="form-label mb-0">Female</label>
                                    </div>
                                    <div class="col-12 col-md-12 mb-3">
                                        <button type="submit" class="btn btn-main"><i class="fas fa-save"></i> Save Changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
        <script>
            document.getElementById('<%= personalData.gender %>').checked = true
        </script>
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/js/form-validator.js"></script>
        <script src="/js/user/swiper-bundle.min.js"></script>
</body>

</html>
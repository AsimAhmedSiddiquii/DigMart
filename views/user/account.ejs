<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Account</title>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link href="/vendor/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
</head>

<body class="bg-light">
    <%- include('navbar') %>
        <div class="container pt-4">
            <div class="row">
                <div class="col-12 col-md-3">
                    <div class="row">
                        <div class="card mb-3 p-2 bg-white border rounded"
                            style="margin-left: 2%; box-shadow: 0 1px 2px 0 rgba(119, 119, 119, 0.2), 0 3px 20px 0 rgba(218, 218, 218, 0.19);">
                            <div class="row">
                                <div class="col-12 col-md-3">
                                    <img src="/img/DigMart.png" style="width:100%">
                                </div>
                                <div class="col-12 col-md-9 mt-3">
                                    <label style="text-align: center;">
                                        <b> Hawaiza Siddiqui </b>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="card mb-3 p-3 bg-white border rounded"
                            style="margin-left: 2%; box-shadow: 0 1px 2px 0 rgba(119, 119, 119, 0.2), 0 3px 20px 0 rgba(218, 218, 218, 0.19);">
                            <div class="row">
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-box-open fa-lg" style="margin-left: 20%; color:#4c9095fa"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1">
                                    <a href="/orders" style="text-align: center; color: gray;">
                                        <b> MY ORDERS </b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card mb-3 p-3 bg-white border rounded"
                            style="margin-left: 2%; box-shadow: 0 1px 2px 0 rgba(119, 119, 119, 0.2), 0 3px 20px 0 rgba(218, 218, 218, 0.19);">
                            <div class="row">
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-user-alt fa-lg" style="margin-left: 20%; color:#4c9095fa"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1 mb-4">
                                    <label style="text-align: center; color: gray;">
                                        <b> ACCOUNT SETTINGS </b>
                                    </label>
                                    <div class="mt-3">
                                        <a href="">Profile Information</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="/account/addresses">Manage Addresses</a>
                                    </div>
                                </div>
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-folder-open fa-lg" style="margin-left: 20%; color:#4c9095fa"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1 ">
                                    <label style="text-align: center; color: gray;">
                                        <b> MY STUFF </b>
                                    </label>
                                    <div class="mt-3">
                                        <a href="/wishlist">My Wishlist</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="#">My Coupons</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="#">My Reviews & Ratings</a>
                                    </div>
                                    <div class="mt-2">
                                        <a href="#">All Notifications</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="card mb-3 p-3 bg-white border rounded"
                            style="margin-left: 2%; box-shadow: 0 1px 2px 0 rgba(119, 119, 119, 0.2), 0 3px 20px 0 rgba(218, 218, 218, 0.19);">
                            <div class="row">
                                <div class="col-3 col-md-3 mt-1">
                                    <i class="fas fa-sign-out-alt fa-lg" style="margin-left: 20%; color:#4c9095fa"></i>
                                </div>
                                <div class="col-9 col-md-9 mt-1">
                                    <a href="/login/logout" style="cursor:pointer; text-align: center; color: gray;">
                                        <b> LOGOUT </b>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-9">
                    <div class="card mb-3 bg-white border rounded"
                        style="margin-left: 2%; box-shadow: 0 1px 2px 0 rgba(119, 119, 119, 0.2), 0 3px 20px 0 rgba(218, 218, 218, 0.19);">
                        <form method="post" id="form1" action="/account" class="needs-validation" novalidate accept-charset="utf-8">
                        <div class="col-12 col-md-12 mb-3">
                            <div class="card p-2 mb-0" style="background-color:#1e686dfa">
                                <div>
                                    <strong
                                        style="color: #FAFFFF; font-family:Arial, Helvetica, sans-serif; padding-left: 2%;">
                                        PERSONAL INFORMATION</strong>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-left:0%; margin-right: 0%;">
                            <div class="col-12 col-md-12 mb-3">
                                <label for="fullName" class="form-label mb-0">Full Name</label>
                                <input type="text" id="fullName" name="fullName" value="" class="form-control"
                                    required>
                                <div class="invalid-feedback">
                                </div>
                            </div>
                            <div class="col-12 col-md-12 mb-3">
                                <label for="email" class="form-label mb-0">Email Id</label>
                                <input type="email" id="email" name="email" class="form-control" value=""
                                    pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                                     required>
                                <div class="invalid-feedback">
                                    Please enter valid email id.
                                </div>
                            </div>
                            <div class="col-12 col-md-12 mb-3">
                                <label for="mobile" class="form-label mb-0">Mobile Number</label>
                                <input type="number" id="mobile" name="mobile" value="" class="form-control"
                                required disabled>
                            </div>
                            <div class="col-12 col-md-12 mt-2 mb-3">
                                <label style="text-align: center;">
                                    <b> Your Gender </b>
                                </label>
                            </div>
                            <div class="col-12 col-md-3 mb-3">
                                <input type="radio" id="male" name="gender" value="male" class="form-check-input">
                                <label for="male" class="form-label mb-0">Male</label>
                            </div>
                            <div class="col-12 col-md-3 mb-3">
                                <input type="radio" id="female" name="gender" value="female" class="form-check-input">
                                <label for="female" class="form-label mb-0">Female</label>
                            </div>
                            <div class="col-12 col-md-12 mb-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Save Changes</button>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            document.getElementById("mobile").value = '<%= personalData[0].mobile %>'
            document.getElementById("fullName").value = '<%= personalData[0].fullName %>'
            document.getElementById("email").value = '<%= personalData[0].email %>'
            document.getElementById('<%= personalData[0].gender %>').checked = true 

        </script>
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/js/form-validator.js"></script>
        <script src="/js/user/swiper-bundle.min.js"></script>
</body>

</html>
    <div
      class="modal modal-fullscreen-sm-down fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <button
        type="button"
        class="fs-1 opacity-25 btn btn-dark text-light position-absolute top-0 start-0"
        data-bs-dismiss="modal"
        aria-label="Close"
      >
        <i class="fa fa-times"></i>
      </button>
      <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
          <div
            id="carouselExampleIndicators"
            class="carousel slide"
            data-bs-ride="true"
          >
            <div class="carousel-indicators">
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="0"
                class="active"
                aria-current="true"
                aria-label="Slide 1"
              ></button>
              <% for (let b=1; b < galleryData.images.length ; b++){ var c=b+1;
              %>
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="<%=b%>"
                aria-label="Slide <%=c%>"
              ></button>
              <% } %>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  src="<%=galleryData.images[0]%>"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <% for (let b=1; b < galleryData.images.length ; b++){ %>
              <div class="carousel-item">
                <img
                  src="<%=galleryData.images[b]%>"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <% } %>
            </div>
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev"
            >
              <span
                class="btn carousel-control-prev-icon"
                style="background-color: black; color: rgb(0, 0, 0)"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next"
            >
              <span
                class="btn carousel-control-next-icon"
                style="background-color: black; color: rgb(0, 0, 0)"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>
    </div>


<body class="bg-light">
    <%- include('navbar') %>

        <div class="container pt-4">
            <div class="row">
                <div class="col-12 col-md-9 col-lg-9" id="address">
                    <form class="needs-validation" novalidate>
                        <div class="card p-2 mb-0" style="background-color:#1e686dfa">
                            <strong style="color: #F4FFFF; font-family:Arial, Helvetica, sans-serif; padding-left: 2%;">
                                DELIVERY
                                ADDRESS</strong>
                        </div>

                        <div class="card p-4 mb-0" id="defaultAddressCard" style="background-color:#F4FFFF;">
                            <div class="row">
                                <div class="col-10 col-md-10">
                                    <input class="form-check-input" id="defaultAddress" type="radio"
                                        onclick="radioSelected()" name="flexRadioDefault" checked>
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        <b>Hawaiza Siddiqui </b>9137242482</br> Lal Qila, Chandni Chowk, Delhi - 110006
                                    </label>
                                </div>
                                <div class="col-2 col-md-2">
                                    <button type="button" class="btn btn-outline-primary"
                                        style="float:right">Edit</button>

                                </div>
                            </div>
                        </div>

                        <div class="card" id="addAddressButton" style="background-color: white; padding-left: 2%">
                            <div class="col-12 col-md-6 p-2">
                                <div onclick="showAddressDetails()" style="cursor: pointer"><i
                                        class="fas fa-plus-circle"></i>
                                    Add a new address</div>
                            </div>
                        </div>

                        <div class="card p-4" id="addAddress" style="background-color:#F4FFFF; display:none">
                            <div class="row">
                                <div class="col-12 col-md-12 mb-3">
                                    <input class="form-check-input" type="radio" onclick="newRadioSelected()"
                                        name="flexRadioDefault1" id="newAddress" checked>
                                    <label class="form-check-label fw-bold" for="flexRadioDefault1">
                                        Add a new Address
                                    </label>
                                </div>
                                <div class="col-12 col-md-6 mb-3">
                                    <label for="fname" class="form-label">First Name</label>
                                    <input type="text" id="fname" class="form-control" placeholder="e.g. John" required>
                                    <div class="invalid-feedback">
                                        Please enter your first name.
                                    </div>
                                </div>

                                <div class="col-12 col-md-6 mb-3">
                                    <label for="lname" class="form-label">Last Name</label>
                                    <input type="text" id="lname" class="form-control" placeholder="e.g. Smith"
                                        required>
                                    <div class="invalid-feedback">
                                        Please enter your last name.
                                    </div>
                                </div>

                                <div class="col-12 mb-3">
                                    <label for="email" class="form-label">Email Id</label>
                                    <input type="email" id="email" class="form-control" value=""
                                        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                                        placeholder="e.g. johnsmith123@gmail.com" required>
                                    <div class="invalid-feedback">
                                        Please enter valid email id.
                                    </div>
                                </div>

                                <div class="col-12 mb-3">
                                    <label for="address" class="form-label">Address</label>
                                    <input type="text" id="address" class="form-control"
                                        placeholder="e.g. Robert Robertson, 1234 NW Bobcat Lane, St. Robert" required>
                                    <div class="invalid-feedback">
                                        Please enter your address.
                                    </div>
                                </div>

                                <div class="col-6 col-md-4 mb-3">
                                    <label for="country" class="form-label">Country</label>
                                    <div class="btn-group  w-100">
                                        <select type="button" id="country"
                                            class="btn btn-secondary dropdown-toggle dropdown-toggle-split"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            <option class="dropdown-item" value="India">India</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-6 col-md-4 mb-3">
                                    <label for="city" class="form-label">City</label>
                                    <div class="btn-group  w-100">
                                        <select type="button" id="city"
                                            class="btn btn-secondary dropdown-toggle dropdown-toggle-split"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            <option class="dropdown-item" value="Mumbai">Mumbai</option>
                                            <option class="dropdown-item" value="Aurangabad">Aurangabad
                                            </option>
                                            <option class="dropdown-item" value="Puna">Pune</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-6 col-md-4 mb-3">
                                    <label for="zip" class="form-label">Zip</label>
                                    <input type="text" id="zip" class="form-control" placeholder="e.g. 400029" required>
                                    <div class="invalid-feedback">
                                        Please enter your zip code.
                                    </div>
                                </div>

                                <div class="col-12 mb-3">
                                    <label for="phoneno" class="form-label">Phone Number</label>
                                    <input type="text" id="phoneno" maxlength="10" pattern="[6789][0-9]{9}"
                                        class="form-control" placeholder="e.g. 9898989898" required>
                                    <div class="invalid-feedback">
                                        Please enter valid phone number.
                                    </div>
                                </div>

                                <div class="col-12 mb-3">
                                    <label for="ordernotes" class="form-label">Order Notes
                                        <span class="text-muted"> (Optional)</span>
                                    </label>
                                    <textarea type="input" id="ordernotes" class="form-control"
                                        placeholder="Notes about your order. e.g. special notes for delivery"></textarea>
                                </div>
                            </div>
                        </div>
                    </form>


                    <div class="accordion pt-4" id="accordionPanelsStayOpenExample">
                        <div class="accordion-item ">
                            <h2 class="accordion-header  " id="panelsStayOpen-headingOne">
                                <button class="accordion-button  bg-dark text-light fw-bold" type="button"
                                    data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                                    aria-controls="panelsStayOpen-collapseOne">
                                    ORDER SUMMARY
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show"
                                aria-labelledby="panelsStayOpen-headingOne">
                                <div class="accordion-body">
                                    <div class="table-responsive  mb-3">
                                        <div style="height: 200px; width: 110% ;overflow:auto;">
                                            <table class="table table-striped">

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <title>Notifications | DigMart</title>
    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/datatables/datatables.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <%- include('../sidebar') %>
            <div id="body" class="active">
                <%- include('../navbar') %>
                    <div class="content">
                        <div class="container">
                            <div class="page-title">
                                <h3><i class="fas fa-rocket"></i> Notifications
                                    <a href="/seller/notifications/send-notification" class="btn btn-sm btn-outline-primary float-end"><i class="fas fa-bell"></i> Send a Notification</a>
                                </h3>
                            </div>
                            <div class="box box-primary">
                                <div class="box-body">
                                    <table width="100%" class="table table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Message</th>
                                                <th>Valid till</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (notifications.length!=0) { 
                                                notifications.forEach(function(data){ %>
                                                <tr>
                                                    <td>
                                                        <%= data.title %>
                                                    </td>
                                                    <td>
                                                        <%= data.message %>
                                                    </td>
                                                    <td>
                                                        <%= data.expireDate %>
                                                    </td>
                                                </tr>
                                                <% }) } else { %>
                                                    <tr>
                                                        <td colspan="4">No Notifications</td>
                                                    </tr>
                                                    <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>


    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/datatables/datatables.min.js"></script>
    <script src="/js/initiate-datatables.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>
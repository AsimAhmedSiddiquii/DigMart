<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Add Product</title>
    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/datatables/datatables.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <!-- sidebar navigation component -->
        <%- include('../sidebar') %>
            <!-- end of sidebar component -->
            <div id="body" class="active">
                <!-- navbar navigation component -->
                <%- include('../navbar') %>
                    <!-- end of navbar navigation -->


                    <div class="content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header fw-bold bg-dark text-light">ADD NEW PRODUCT</div>
                                        <div class="card-body">

                                            <form action="/seller/products/add-product" enctype="multipart/form-data"
                                                id="addProductForm" method="post" class="needs-validation" novalidate
                                                accept-charset="utf-8">
                                                <!-- <form action="/seller/products/add-product"
                                        method="post" class="needs-validation" novalidate accept-charset="utf-8"> -->
                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="images" class="form-label">Product Images</label>
                                                        <input type="file" class="form-control" name="images"
                                                            multiple='multiple' accept="image/*" required>
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <div class="invalid-feedback">Please Choose an Image.</div>
                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="productName" class="form-label">Product Name</label>
                                                        <input type="name" class="form-control" name="productName"
                                                            id="prodName" placeholder="e.g. Samsung Galaxy S22 Ultra"
                                                            required>
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <div class="invalid-feedback">Please enter product name.</div>
                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="description" class="form-label">Product
                                                            Description</label>
                                                        <textarea type="name" class="form-control" name="description"
                                                            placeholder="e.g. The first Galaxy S with embedded S Pen. Write comfortably like pen on paper, turn quick notes into legible text and use Air Actions to control your phone remotely..."
                                                            required></textarea>

                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-6">
                                                        <label for="category" class="form-label">Category</label>
                                                        <!-- <input type="name" class="form-control" name="category"
                                                    placeholder="Enter Category Name" required> -->
                                                        <select name="category" class="form-select" id="category"
                                                            onchange="populate(this.id, 'subcategory')" required>
                                                            <option value="">
                                                                ---Choose Category---
                                                            </option>
                                                            <% if(catData.length!=0){ var i=1;
                                                                catData.forEach(function(data){ if(data.status=="Active"
                                                                ){ %>

                                                                <option value="<%=data.catName%>" id="element">
                                                                    <%=data.catName %>
                                                                </option>
                                                                <% } %>
                                                                    <% i++; }) %>
                                                                        <% } else{ %>
                                                                            <option value="No Category">Category Not
                                                                                Available</option>
                                                                            <% } %>
                                                        </select>
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <div class="invalid-feedback">Please enter category name.</div>
                                                    </div>

                                                    <div class="mb-3 col-md-6">
                                                        <label for="subcategory" class="form-label">Subcategory</label>
                                                        <select name="subcategory" id="subcategory" class="form-select">

                                                        </select>
                                                        <!-- <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter subcategory name.</div> -->
                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class=" col-md-3">
                                                        <label for="sizes" class="form-label">Sizes
                                                            <span class="text-muted"> (Optional)</span>
                                                        </label>
                                                    </div>
                                                    <div class=" col-md-4">
                                                        <label for="sizes" class="form-label">Colours
                                                            <span class="text-muted"> (Optional)</span>
                                                        </label>
                                                    </div>
                                                    <div class=" col-md-3">
                                                        <label for="quantity" class="form-label">Quantity
                                                            <span class="text-muted"> (Optional)</span>
                                                        </label>
                                                    </div>
                                                </div>

                                                <div id="showItems">
                                                <div class="row g-2" id="row1">
                                                    <div class=" col-md-3">
                                                        <input type="name" class="form-control" name="sizes" id="sizes"
                                                            placeholder="e.g. XL">
                                                    </div>

                                                    <div class=" col-md-4">
                                                        <input type="name" class="form-control" name="colours"
                                                            placeholder="e.g. Black, White">
                                                    </div>

                                                    <div class=" col-md-3">
                                                        <input type="number" class="form-control" name="quantity"
                                                            min="1" placeholder="e.g. 50">
                                                    </div>


                                                    <div class="mb-3 col-md-2">
                                                        <button class="btn btn-outline-primary addItemBtn"><i
                                                                class="fas fa-plus-circle"></i>
                                                            Add More</a>
                                                    </div>

                                                </div>
                                            </div>






                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="colours" class="form-label">Colours
                                                            <span class="text-muted"> (Optional)</span>
                                                        </label>
                                                        <input type="name" class="form-control" name="colours"
                                                            placeholder="e.g. Black, White">
                                                        <!-- <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter colour(s).</div> -->
                                                    </div>
                                                </div>


                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="brand" class="form-label">Brand
                                                            <span class="text-muted"> (Optional)</span>
                                                        </label>
                                                        <input type="name" class="form-control" name="brand"
                                                            placeholder="e.g. Samsung">
                                                        <!-- <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter Brand Name.</div> -->
                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-4">
                                                        <label for="actualPrice" class="form-label">Actual
                                                            Price</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text">&#8377;</span>
                                                            <input type="text" class="form-control" name="actualPrice"
                                                                id="actualPrice" min="1" pattern="[0-9]{1,9}"
                                                                onblur="calculate('discount', this.value )"
                                                                placeholder="Eg. 30000" required>

                                                            <div class="invalid-feedback">Please enter Actual Price.
                                                            </div>
                                                            <div class="valid-feedback">Looks good!</div>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 col-md-4">
                                                        <label for="discount" class="form-label">Discount
                                                            <span class="text-muted"> (Optional)</span>
                                                        </label>
                                                        <div class="input-group">
                                                            <span class="input-group-text">%</span>
                                                            <input type="text" class="form-control" name="discount"
                                                                id="discount"
                                                                onblur="calculate(this.value, 'actualPrice')"
                                                                placeholder="e.g. 10" min="1" pattern="[0-9]{1,2}">

                                                            <div class="valid-feedback">Looks good!</div>
                                                            <div class="invalid-feedback">Discount should be below
                                                                100
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3 col-md-4">
                                                        <label for="finalPrice" class="form-label">Final
                                                            Price</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text">&#8377;</span>
                                                            <input type="number" class="form-control" name="finalPrice"
                                                                id="finalPrice"
                                                                placeholder="Final Price (Auto calculated)" readonly>

                                                            <!-- <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter Final Price.</div> -->
                                                        </div>
                                                    </div>

                                                </div>


                                                <a href="/seller/products/?status=Pending" class="btn btn-danger"><i
                                                        class="fas fa-times"></i>
                                                    Cancel</a>
                                                <button type="submit" class="btn btn-primary" id="submitData"
                                                    style="float: right"><i class="fas fa-save"></i> Add
                                                    Product</button>
                                            </form>




                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>
    <script>

        //Populate subcategory dropdown 
        function populate(category, subcategory) {
            var cat = document.getElementById("category");
            var subcat = document.getElementById("subcategory");
            // document.write(subcategory);
            var b = testing(cat);

            subcat.innerHTML = "";

            function testing(cat) {
                '<% if(catData.length!=0){ var i=1; catData.forEach(function(data){ %>'
                var a = '<%=data.catName%>';
                if (cat.value == a) {
                    return '<%=data.sub_category%>';
                }
                '<% i++; }) %>'
                '<% } %>'
            }

            var subcatValues = b;
            var optionsArray = subcatValues.split(",")

            for (var option in optionsArray) {
                var pair = optionsArray[option].split(",")
                var newoption = document.createElement("option");

                newoption.value = pair[0];
                newoption.innerHTML = pair[0];
                subcat.options.add(newoption);
            }

        }


        //Toast Trigger
        const toastTrigger = document.getElementById('submitData')
        const toastLiveExample = document.getElementById('liveToast')
        if (toastTrigger) {
            toastTrigger.addEventListener('click', () => {
                const toast = new bootstrap.Toast(toastLiveExample)

                toast.show()
            })
        }


        function calculate(val1, val2) {
            var actualPrice = document.getElementById("actualPrice").value;
            var discountPct = document.getElementById("discount").value;


            var total = (actualPrice * discountPct) / 100;
            finalPrice = actualPrice - total;

            var finalPriceField = document.getElementById("finalPrice");
            finalPriceField.value = finalPrice;

            // if (discountPct == 0) {
            //     finalPriceField.value = null;
            // }

        }





    </script>


    <script src="/vendor/jquery/jquery.min.js"></script>
    <script>
        // Add more fields for size and quantity
        $(document).ready(function () {
            $(".addItemBtn").click(function(e){
                e.preventDefault();
                $("#showItems").prepend(`<div class="row g-2" id="row1">
                                                    <div class=" col-md-3">
                                                        <input type="name" class="form-control" name="sizes" id="sizes"
                                                            placeholder="e.g. XL">
                                                    </div>

                                                    <div class=" col-md-4">
                                                        <input type="name" class="form-control" name="colours"
                                                            placeholder="e.g. Black, White">
                                                    </div>

                                                    <div class=" col-md-3">
                                                        <input type="number" class="form-control" name="quantity"
                                                            min="1" placeholder="e.g. 50">
                                                    </div>


                                                    <div class="mb-3 col-md-2">
                                                        <button class="btn btn-outline-danger removeItemBtn"><i
                                                                class="fas fa-plus-circle"></i>
                                                            Remove</a>
                                                    </div>

                                                </div>`);
            });
        });
        
    </script>



    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/datatables/datatables.min.js"></script>
    <script src="/js/form-validator.js"></script>
    <script src="/js/initiate-datatables.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>
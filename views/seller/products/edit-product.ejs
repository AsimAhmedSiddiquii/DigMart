<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Edit Product</title>

    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/datatables/datatables.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
</head>

<style>
    .item {
        position: relative;
        padding: 2px;
        display: inline-block;
        margin: 10px;
        border: 2px solid #555;
    }

    .notify-badge {
        position: absolute;
        right: -20px;
        top: -10px;
        opacity: 0.95;
        text-align: center;
        border-radius: 5px 5px 5px 5px;
        color: white;
        padding: 5px 10px;
        font-size: 10px;
    }
</style>

<body>
    <div class="wrapper">
        <!-- sidebar navigation component -->
        <%- include('../sidebar') %>
            <!-- end of sidebar component -->
            <div id="body" class="active">
                <!-- navbar navigation component -->
                <%- include('../navbar') %>
                    <!-- end of navbar navigation -->


                    <div class="content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header fw-bold bg-dark text-light">EDIT PRODUCT</div>
                                        <div class="card-body">

                                            <form method="post" enctype="multipart/form-data"
                                                action="/seller/products/edit-product/<%=productData._id %>"
                                                class="needs-validation" novalidate accept-charset="utf-8">

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="productName" class="form-label">Product
                                                            ID</label>
                                                        <input type="name" class="form-control" name="_id"
                                                            value="<%=productData._id %>" disabled>
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <div class="invalid-feedback">Please enter product name.
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-6">
                                                        <label for="category" class="form-label">Category</label>
                                                        <select name="category" class="form-select" id="category"
                                                            onchange="populate(this.id, 'subcategory')" required>
                                                            <option value="">
                                                                ---Choose Category---
                                                            </option>
                                                            <% if(catData.length!=0){ var i=1;
                                                                catData.forEach(function(data){ %>

                                                                <option value="<%=data.catName%>" id="element">
                                                                    <%=data.catName %>
                                                                </option>
                                                                <% i++; }) %>
                                                                    <% } else{ %>
                                                                        <option value="No Category">Category Not
                                                                            Available</option>
                                                                        <% } %>
                                                        </select>
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <div class="invalid-feedback">Please enter category name.
                                                        </div>
                                                    </div>



                                                    <div class="mb-3 col-md-6">
                                                        <label for="subcategory" class="form-label">Subcategory</label>
                                                        <select name="subcategory" id="subcategory" class="form-select"
                                                            onfocus="populate('category', this.id)">
                                                            <option value="<%=productData.subcategory %>">
                                                                <%=productData.subcategory %>
                                                            </option>
                                                        </select>

                                                    </div>
                                                </div>


                                                <div id="addImagesForNoVariant">

                                                    <div class="row g-2">
                                                        <div class="mb-3 col-md-12">
                                                            <label for="productName" class="form-label">Product
                                                                Name</label>
                                                            <input type="name" class="form-control" name="productName"
                                                                value="<%=productData.productName %>"
                                                                placeholder="e.g. Samsung Galaxy S22 Ultra" required>
                                                            <div class="valid-feedback">Looks good!</div>
                                                            <div class="invalid-feedback">Please enter product
                                                                name.
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>





                                                <% if(!productData.hasVariant){%>

                                                    <div class="row g-2">
                                                        <div class="mb-3 col-md-12">
                                                            <label for="productName" class="form-label">Product
                                                                Images</label>
                                                        </div>
                                                    </div>

                                                    <div class="row g-2">
                                                        <% for (let a=0; a < productData.images.length; a++){ %>
                                                            <div class=" col-md-2">

                                                                <div class="item">

                                                                    <img src="<%=productData.images[a]%>"
                                                                        style="width: 100%; ">
                                                                    <% if(productData.images.length> 1){ %>

                                                                        <a
                                                                            href="/seller/products/delete-image/<%=productData._id%>/<%=a %>">
                                                                            <span
                                                                                class="btn btn-danger notify-badge fw-bold">X</span>
                                                                        </a>
                                                                        <% } else {%>
                                                                            <!-- <button type="button" class="notify-badge">
                                                                            X</button> -->
                                                                            <button type="button"
                                                                                class="btn btn-danger notify-badge fw-bold"
                                                                                id="dontDelete" data-bs-toggle="modal"
                                                                                data-bs-target="#cantDelete"><i
                                                                                    class="fas fa-cancel"></i>X</button>
                                                                            <% } %>

                                                                </div>

                                                            </div>

                                                            <% } %>
                                                    </div>

                                                    <div class="row g-2">

                                                        <div class="mb-3 col-md-12">

                                                            <% if(productData.images.length!=0){ %>


                                                                <label for="productImg" class="form-label">Add More
                                                                    Images</label>
                                                                <% } %>

                                                                    <input type="file" class="form-control"
                                                                        name="images" accept="image/*" id="chooseImage"
                                                                        multiple>
                                                                    <div class="valid-feedback">Looks good!</div>
                                                                    <div class="invalid-feedback">Please Choose an
                                                                        Image.
                                                                    </div>
                                                        </div>
                                                    </div>
                                                    <% } %>


                                                        <div class="row g-2">
                                                            <div class="mb-3 col-md-12">
                                                                <label for="description" class="form-label">Product
                                                                    Description</label>
                                                                <textarea type="name" class="form-control"
                                                                    name="description"
                                                                    placeholder="e.g. The first Galaxy S with embedded S Pen. Write comfortably like pen on paper, turn quick notes into legible text and use Air Actions to control your phone remotely..."
                                                                    required><%=productData.description %></textarea>

                                                            </div>
                                                        </div>

                                                        <div id="addQuantityForNoVariant">
                                                            <div class="row g-2">
                                                                <div class="mb-3 col-md-12">
                                                                    <label for="brand" class="form-label">Brand
                                                                        <span class="text-muted"> (Optional)</span>
                                                                    </label>
                                                                    <input type="name" class="form-control" name="brand"
                                                                        value="<%=productData.brand %>"
                                                                        placeholder="e.g. Samsung">
                                                                    <!-- <div class="valid-feedback">Looks good!</div>
                                                                    <div class="invalid-feedback">Please enter Brand Name.</div> -->
                                                                </div>
                                                            </div>

                                                        </div>

                                                        <% if(!productData.hasVariant){%>

                                                            <div class="row g-2">
                                                                <div class="mb-3 col-md-12">
                                                                    <label for="quantity" class="form-label">Quantity
                                                                        <span class="text-muted">
                                                                            (Optional)</span>
                                                                    </label>
                                                                    <input type="number" class="form-control"
                                                                        name="quantity" id="quantity" min="1"
                                                                        value="<%=productData.quantity %>"
                                                                        placeholder="e.g. 50">
                                                                    <!-- <div class="valid-feedback">Looks good!</div>
                                        <div class="invalid-feedback">Please enter Quantity.</div> -->
                                                                </div>
                                                            </div>

                                                            <% } %>

                                                                <hr>

                                                                <div class="row g-2">
                                                                    <div class="mb-1 col-md-12 fw-bold">
                                                                        <label for="specName"
                                                                            class="form-label">ADDITIONAL
                                                                            SPECIFICATIONS
                                                                            <span class="text-muted">
                                                                                (Optional)</span>
                                                                            :
                                                                        </label>

                                                                    </div>
                                                                </div>

                                                                <div class="row g-2">
                                                                    <div class=" col-md-3">
                                                                        <label for="specName" class="form-label">Name:

                                                                        </label>
                                                                    </div>

                                                                    <div class=" col-md-5">
                                                                        <label for="specValue"
                                                                            class="form-label">Description:

                                                                        </label>
                                                                    </div>
                                                                </div>



                                                                <div id="addPricesForNoVariant">

                                                                    <div id="showSpecifications">
                                                                        <% for (let i in productData.specifications){ %>

                                                                            <div class="row g-2" id="specsRow">
                                                                                <div class="mb-3 col-md-3">
                                                                                    <input type="name"
                                                                                        class="form-control"
                                                                                        name="specName[]" id="specName"
                                                                                        value="<%=productData.specifications[i].specName %>"
                                                                                        placeholder="e.g. In The Box">
                                                                                </div>

                                                                                <div class="mb-3 col-md-5">
                                                                                    <textarea type="name"
                                                                                        class="form-control"
                                                                                        name="specValue[]"
                                                                                        id="specValue"
                                                                                        style="height: 30px;"
                                                                                        placeholder="e.g. Handset, Charging Cable"><%=productData.specifications[i].specValue %></textarea>
                                                                                </div>

                                                                                <div
                                                                                    class="mb-3 col-md-2 divremoveSpecsBtnMain">
                                                                                    <button
                                                                                        class="btn btn-outline-danger removeSpecsBtnMain"><i
                                                                                            class="fas fa-minus-circle"></i>
                                                                                        Remove</a>
                                                                                </div>

                                                                            </div>
                                                                            <% } %>
                                                                    </div>


                                                                    <div class="mb-3 col-md-3 d-grid">
                                                                        <button class="btn btn-outline-primary"
                                                                            id="addSpecsBtnMain"><i
                                                                                class="fas fa-plus-circle"></i>
                                                                            Add More Specifications</button>

                                                                    </div>

                                                                </div>

                                                                <% if(!productData.hasVariant){%>

                                                                    <div class="row g-2">
                                                                        <div class="mb-3 col-md-4">
                                                                            <label for="actualPrice"
                                                                                class="form-label">Actual
                                                                                Price</label>
                                                                            <div class="input-group">
                                                                                <span
                                                                                    class="input-group-text">&#8377;</span>
                                                                                <input type="text" class="form-control"
                                                                                    name="actualPrice"
                                                                                    value="<%=productData.actualPrice %>"
                                                                                    id="actualPrice" min="1"
                                                                                    pattern="[0-9]{1,9}"
                                                                                    onblur="calculate('discount', this.value )"
                                                                                    placeholder="Eg. 30000" required>

                                                                                <div class="invalid-feedback">Please
                                                                                    enter
                                                                                    Actual
                                                                                    Price.
                                                                                </div>
                                                                                <div class="valid-feedback">Looks
                                                                                    good!
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="mb-3 col-md-4">
                                                                            <label for="discount"
                                                                                class="form-label">Discount
                                                                                <span class="text-muted">
                                                                                    (Optional)</span>
                                                                            </label>
                                                                            <div class="input-group">
                                                                                <span class="input-group-text">%</span>
                                                                                <input type="text" class="form-control"
                                                                                    name="discount"
                                                                                    value="<%=productData.discount %>"
                                                                                    id="discount"
                                                                                    onblur="calculate(this.value, 'actualPrice')"
                                                                                    placeholder="e.g. 10" min="1"
                                                                                    pattern="[0-9]{1,2}">

                                                                                <div class="valid-feedback">Looks
                                                                                    good!
                                                                                </div>
                                                                                <div class="invalid-feedback">Please
                                                                                    enter
                                                                                    Discount (without % symbol).
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="mb-3 col-md-4">
                                                                            <label for="finalPrice"
                                                                                class="form-label">Final
                                                                                Price</label>
                                                                            <div class="input-group">
                                                                                <span
                                                                                    class="input-group-text">&#8377;</span>
                                                                                <input type="text" class="form-control"
                                                                                    name="finalPrice"
                                                                                    value="<%=productData.finalPrice %>"
                                                                                    id="finalPrice"
                                                                                    placeholder="Final Price (Auto calculated)"
                                                                                    readonly>

                                                                                <!-- <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter Final Price.</div> -->
                                                                            </div>
                                                                        </div>

                                                                    </div>

                                                                    <% } %>



                                                                        <div class="row g-2">
                                                                            <div class="mb-3 col-md-12">
                                                                                <label for="productName"
                                                                                    class="form-label">Status</label>
                                                                                <input type="name" class="form-control"
                                                                                    name="_id"
                                                                                    value="<%=productData.status %>"
                                                                                    disabled>
                                                                            </div>
                                                                        </div>


                                                                        <div class="row g-2">
                                                                            <div class="mb-3 col-md-12">
                                                                                <a href="/seller/products"
                                                                                    class="btn btn-danger"><i
                                                                                        class="fas fa-times"></i>
                                                                                    Cancel</a>


                                                                                <button type="button"
                                                                                    class="btn btn-primary"
                                                                                    id="submitData"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target="#staticBackdrop"
                                                                                    style="float:right"><i
                                                                                        class="fas fa-save"></i>
                                                                                    Save Changes</button>



                                                                            </div>
                                                                        </div>



                                                                        <!-- Delete Warning Modal -->
                                                                        <div class="modal fade" id="cantDelete"
                                                                            data-bs-backdrop="static"
                                                                            data-bs-keyboard="false" tabindex="-1"
                                                                            aria-labelledby="cantDeleteLabel"
                                                                            aria-hidden="true">
                                                                            <div class="modal-dialog">
                                                                                <div class="modal-content">
                                                                                    <div class="modal-header">
                                                                                        <h5 class="modal-title"
                                                                                            id="cantDeleteLabel">
                                                                                            Cannot delete image
                                                                                        </h5>
                                                                                        <button type="button"
                                                                                            class="btn-close"
                                                                                            data-bs-dismiss="modal"
                                                                                            aria-label="Close"></button>
                                                                                    </div>
                                                                                    <div class="modal-body">
                                                                                        There should be atleast one
                                                                                        product image present!
                                                                                    </div>
                                                                                    <div class="modal-footer">
                                                                                        <button type="button"
                                                                                            class="btn btn-danger"
                                                                                            data-bs-dismiss="modal">OK</button>

                                                                                    </div>

                                                                                </div>
                                                                            </div>
                                                                        </div>


                                                                        <!-- Save changes Warning Modal -->
                                                                        <div class="modal fade" id="staticBackdrop"
                                                                            data-bs-backdrop="static"
                                                                            data-bs-keyboard="false" tabindex="-1"
                                                                            aria-labelledby="staticBackdropLabel"
                                                                            aria-hidden="true">
                                                                            <div class="modal-dialog">
                                                                                <div class="modal-content">
                                                                                    <div class="modal-header">
                                                                                        <h5 class="modal-title"
                                                                                            id="staticBackdropLabel">
                                                                                            Save
                                                                                            Changes!
                                                                                        </h5>
                                                                                        <button type="button"
                                                                                            class="btn-close"
                                                                                            data-bs-dismiss="modal"
                                                                                            aria-label="Close"></button>
                                                                                    </div>
                                                                                    <div class="modal-body">
                                                                                        Are you sure you want to
                                                                                        Save
                                                                                        the
                                                                                        Changes?
                                                                                    </div>
                                                                                    <div class="modal-footer">
                                                                                        <button type="button"
                                                                                            class="btn btn-secondary"
                                                                                            data-bs-dismiss="modal">Cancel</button>

                                                                                        <button type="submit"
                                                                                            class="btn btn-primary"
                                                                                            data-bs-dismiss="modal">SAVE

                                                                                        </button>




                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>

    <script>
        let element = document.getElementById('category');
        element.value = '<%=productData.category %>';

        let element1 = document.getElementById('subcategory');
        element1.value = '<%=productData.subcategory %>';


        let chooseImage = document.getElementById("chooseImage")
        '<% if(productData.images.length==0){ %>'
        chooseImage.setAttribute('required', '');

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="icon" type="image/png" href="/img/favicon.png">

    <title>Login | DigMart</title>
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/auth.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <div class="auth-content">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="mb-4 text-muted">Seller Login</h1>
                    <div class="mb-3 text-start">
                        <label for="busMobile" class="form-label">Enter registered Mobile No. / Email-ID</label>
                        <div class="input-group mb-2">
                            <input type="text" id="credential" name="credential" class="form-control"       
                                placeholder="Mobile No. / Email-ID" style="width: 80%;">
                            <small id="err" class="form-text text-muted" style="display: none;">
                                <span id="errMsg" style="color: red;"></span></small>
                        </div>
                    </div>
                    <button type="button" onclick="sendOTP()" class="btn btn-primary btn1 width-50 ml-auto">Get
                        OTP</button>
                    <p class="mt-2 text-muted">Don't have account yet? <a href="/seller/signup">Signup</a></p>
                </div>
            </div>
        </div>

        <!-- Mobile OTP Modal -->
        <div class="modal fade" id="mobileModal" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body text-start">
                        <form action="/seller/login" method="post">
                            <div class="d-flex justify-content-center align-items-center ">
                                <div class="card py-5 px-3 mb-0">
                                    <h3 class="text-center mb-4">Mobile No. verification</h3>
                                    <span class="mobile-text">Enter the code we just send on your Mobile No.<br>
                                        <b id="busMobile" style="color: rgb(11, 78, 179);">

                                        </b></span>
                                    <div class="d-flex flex-row mt-4">
                                        <input id="mobOtp1" name="mobOtp1" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            autofocus="" required>
                                        <input id="mobOtp2" name="mobOtp2" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            required>
                                        <input id="mobOtp3" name="mobOtp3" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            required>
                                        <input id="mobOtp4" name="mobOtp4" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            required>
                                    </div>
                                    <input type="hidden" name="hidMobile" id="hidMobile" value="">
                                    <div class="text-center mt-3 mb-3">
                                        <button id="submit1" type="submit" class="btn btn-primary" disabled="true"
                                            style="width: 25%;">Submit</button>
                                    </div>
                                    <div class="text-center mt-2">
                                        <span class="d-block mobile-text">Didn't receive the code?</span>
                                        <span class="font-weight-bold cursor"
                                            style="color: rgb(11, 78, 179); text-decoration: underline;">Resend</span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Email OTP Modal -->
        <div class="modal fade" id="emailModal" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body text-start">
                        <form action="/seller/login" method="post">
                            <div class="d-flex justify-content-center align-items-center ">
                                <div class="card py-5 px-3 mb-0">
                                    <h3 class="text-center mb-4">Email verification</h3>
                                    <span class="mobile-text">Enter the code we just sent on your Email<br>
                                        <b id="busEmail" style="color: rgb(11, 78, 179);">

                                        </b></span>
                                    <div class="d-flex flex-row mt-4">
                                        <input id="emailOtp1" name="emailOtp1" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            required>
                                        <input id="emailOtp2" name="emailOtp2" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            required>
                                        <input id="emailOtp3" name="emailOtp3" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            required>
                                        <input id="emailOtp4" name="emailOtp4" type="text"
                                            class="text-center form-control m-2" pattern="[0-9]{1}" maxlength="1"
                                            required>
                                    </div>
                                    <input type="hidden" name="hidEmail" id="hidEmail" value="">
                                    <div class="text-center mt-3 mb-3">
                                        <button id="submit2" type="submit" class="btn btn-primary" disabled="true"
                                            style="width: 25%;">Submit</button>
                                    </div>

                                    <div class="text-center mt-2">
                                        <span class="d-block mobile-text">Didn't receive the code?</span>
                                        <span class="font-weight-bold cursor"
                                            style="color: rgb(11, 78, 179); text-decoration: underline;">Resend</span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/js/seller/login.js"></script>
<script src="/js/form-validator.js"></script>

</html>
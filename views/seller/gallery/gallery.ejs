<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="icon" type="image/png" href="/img/favicon.png">
  <title>Gallery | DigMart</title>

  <link href="/vendor/fontawesome/css/all.min.css" rel="stylesheet">
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/vendor/Datatables/datatables.min.css" rel="stylesheet" />
  <link href="/css/master.css" rel="stylesheet" />
  <link href="/css/seller/gallery.css" rel="stylesheet" />
</head>

<body>
  <div class="wrapper">
    <%- include('../sidebar') %>
      <div id="body" class="active">
        <%- include("../navbar") %>
          <div class="content">
            <div class="container">
              <div class="page-title">
                <h3>
                  Gallery
                  <button id="delBtn" class="btn btn-sm btn-outline-danger float-end"><i class="fas fa-trash"></i>
                    Delete All
                    Images</button>
                  <form action="/seller/gallery/upload-img" method="post" class="d-inline" enctype="multipart/form-data"
                    id="imageUploadForm">
                    <button id="addBtn" class="btn btn-sm btn-outline-primary float-end mx-2"><i
                        class="fas fa-plus-circle"></i> Add Image</button>
                    <input type="file" class="d-none" id="images" name="images" multiple='multiple' accept="image/*"
                      required>
                  </form>

                </h3>
              </div>

              <div class="box box-primary">
                <div class="box-body">
                  <table width="100%" class="table table-hover" id="dataTables-example">
                    <thead>
                      <tr>
                        <th>Photos</th>
                        <th>Date Added</th>
                        <th>Status</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(galDocs) { if(galDocs.images.length!=0){ galDocs.images.forEach(function(image, index){ %>
                        <tr>
                          <td>
                            <img src="<%=image.url%>" class="gallImg" onclick="showModal('<%=image.url%>')"/>
                          </td>
                          <td>
                            <%=image.date%>
                          </td>
                          <td>
                            <%=image.status%>
                          </td>
                          <td class="text-end">
                            <button onclick="showModal('<%=image.url%>')" class="btn btn-outline-info btn-rounded">
                              <i class="fas fa-eye"></i>
                            </button>

                            <a href="/seller/gallery/delete-img/<%=index%>"
                              class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                          </td>
                        </tr>
                        <% })}} if(!galDocs || galDocs.images.length==0){ %>
                          <tr>

                            <td colspan="12" class="fs-1">
                              <img src="/img/nothing.png" width="50%" />
                              No Image Found
                            </td>

                          </tr>
                          <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>

  <!-- single image modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <button type="button" class="btn-close btn-close-white fs-5 position-absolute" style="top: 10px; right: 10px;"
      data-bs-dismiss="modal" aria-label="Close">
    </button>
    <div class="modal-dialog modal-sm modal-dialog-centered mx-auto" style="max-width: 300px;">
      <div class="modal-content">
        <img src="" id="singleimg" class="d-block w-100" style="max-height: 400px;" alt="..." />
      </div>
    </div>
  </div>


</body>
<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/vendor/datatables/datatables.min.js"></script>
<script src="/js/initiate-datatables.js"></script>
<script src="/js/script.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>

  $("#addBtn").on("click", function () {
    $("#images").click()
  });

  $("#delBtn").on("click", function () {
    swal({
      title: "Are you sure?",
      text: "All the images in the Gallery will be deleted!",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        if (willDelete) {
          location.href = 'gallery/delete-gallery'
        } 
      });
  });


  $("#images").on("change", function () {
    const isImage = (file) => file['type'].includes('image');
    var length = $("#images")[0].files.length
    if (length > 10) {
      swal("Wait!", "Upto 10 images can be uploaded at once", "error");
      $("#images").val('')
    } else {
      for (let i = 0; i < length; i++) {
        if (!isImage($("#images")[0].files[i])) {
          alert('Please upload images only')
          $("#images").val('')
          return
        }
      }
      $("#imageUploadForm").submit();
    }
  });

  function showModal(imgsrc) {
    $('#singleimg').attr('src', imgsrc)
    $('#imageModal').modal('show');
  }

</script>


</html>
<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Edit Variant</title>
    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/datatables/datatables.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
</head>

<style>
    .item {
        position: relative;
        padding: 2px;
        display: inline-block;
        margin: 10px;
        border: 2px solid #555;
    }

    .notify-badge {
        position: absolute;
        right: -20px;
        top: -10px;
        opacity: 0.95;
        text-align: center;
        border-radius: 5px 5px 5px 5px;
        color: white;
        padding: 5px 10px;
        font-size: 10px;
    }
</style>

<body>
    <div class="wrapper">
        <!-- sidebar navigation component -->
        <%- include('../sidebar') %>
            <!-- end of sidebar component -->
            <div id="body" class="active">
                <!-- navbar navigation component -->
                <%- include('../navbar') %>
                    <!-- end of navbar navigation -->
                    <div class="content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header fw-bold bg-dark text-light">EDIT VARIANT</div>
                                        <div class="card-body">

                                            <form enctype="multipart/form-data" id="editVariantForm" method="post"
                                                class="needs-validation" novalidate accept-charset="utf-8">

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="productName" class="form-label">Seller
                                                            Name</label>
                                                        <input type="name" class="form-control" name="productName"
                                                            value="<%=pFname %>" id="productName"
                                                            readonly>

                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="productName" class="form-label">Product
                                                            Images</label>
                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <% for (let a=0; a < galleryData.images.length; a++){ %>
                                                        <div class=" col-md-2">
                                                            <div class="item">
                                                                <img src="<%=galleryData.images[a]%>"
                                                                    style="width: 100%; ">
                                                                <% if(galleryData.images.length> 1){ %>
                                                                    <a
                                                                        href="/seller/gallery/delete-image/<%=sellerID%>/<%=galleryData._id%>/<%=a %>">
                                                                        <span
                                                                            class="btn btn-danger notify-badge fw-bold">X</span>
                                                                    </a>
                                                                    <% } else {%>
                                                                        <button type="button"
                                                                            class="btn btn-danger notify-badge fw-bold"
                                                                            id="dontDelete" data-bs-toggle="modal"
                                                                            data-bs-target="#cantDelete"><i
                                                                                class="fas fa-cancel"></i>X</button>
                                                                        <% } %>
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                </div>

                                                <div class="row g-2">

                                                    <div class="mb-3 col-md-12">

                                                        <% if(images.length!=0){ %>
                                                            <label for="productImg" class="form-label">Add More
                                                                Images
                                                                <span class="text-muted">(Optional)</span></label>
                                                            <% } %>

                                                                <input type="file" class="form-control" name="images"
                                                                    accept="image/*" id="chooseImage" multiple>
                                                                <div class="valid-feedback">Looks good!</div>
                                                                <div class="invalid-feedback">Please Choose an
                                                                    Image.
                                                                </div>
                                                    </div>
                                                </div>


                                                <a href="/seller/gallery/<%=sellerID %>"
                                                    class="btn btn-danger"><i class="fas fa-times"></i>
                                                    Cancel</a>

                                                <button type="button" class="btn btn-primary" id="submitData"
                                                    data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                                                    style="float:right"><i class="fas fa-save"></i>
                                                    Save Changes</button>

                                                <!-- Delete Image Warning Modal -->
                                                <div class="modal fade" id="cantDelete" data-bs-backdrop="static"
                                                    data-bs-keyboard="false" tabindex="-1"
                                                    aria-labelledby="cantDeleteLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="cantDeleteLabel">
                                                                    Cannot delete image
                                                                </h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                There should be atleast one
                                                                product image present!
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-danger"
                                                                    data-bs-dismiss="modal">OK</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>


                                                <!-- Save changes Warning Modal -->
                                                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                                                    data-bs-keyboard="false" tabindex="-1"
                                                    aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="staticBackdropLabel">
                                                                    Save
                                                                    Changes!
                                                                </h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to
                                                                Save
                                                                the
                                                                Changes?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Cancel</button>

                                                                <button type="submit" class="btn btn-primary"
                                                                    data-bs-dismiss="modal">SAVE

                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <script src="/vendor/jquery/jquery.min.js"></script>

                            

                            <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
                            <script src="/vendor/datatables/datatables.min.js"></script>
                            <script src="/js/form-validator.js"></script>
                            <script src="/js/initiate-datatables.js"></script>
                            <script src="/js/script.js"></script>
</body>

</html>
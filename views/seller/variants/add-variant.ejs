    <script src="/vendor/jquery/jquery.min.js"></script>

    <script>
        var colours = document.getElementById("colours")
        var images = document.getElementById("images")
        var variantID;
        //   var imageArray = []
        $("#submitColoursData").click(function () {
            colours.setAttribute("disabled", 'true')
            images.setAttribute("disabled", 'true')
            var coloursVal = $("#colours").val();

            // var formData = new FormData();
            // var imagesVal = $("#images")[0].files[0];

            // formData.append('images', imagesVal);
            // alert(formData.get('images'))
            // // fd.append('images', document.getElementById('images').files[0])
            // // const query = new URLSearchParams(fd);
            // alert(formData[2]);

            $.ajax({
                url: "/seller/products/variant/add-variant/<%=productData._id %>",
                method: "POST",
                headers: { 'Content-Type': 'application/json' },
                data: JSON.stringify({ colours: coloursVal }),
                success: function (res) {
                    variantID = res.getVariantID
                }
            })
            document.getElementById('appendItemsLabel').style.display = "block";
            document.getElementById('appendItems').style.display = "block";
            document.getElementById('submitColoursData').remove();
            document.getElementById('submitVariantData').style.display = "block";
            document.getElementById('cancelButton1').remove();
            document.getElementById('cancelButton2').style.display = "block";
            document.getElementById('addMoreBtnMain').style.display = "block";

        })

        $("#submitVariantData").click(function () {
            addValues();
        })

        var addMoreItemsArr = [];
        var sizesArray = [];
        var quantityArray = [];
        var actualPriceArray = [];
        var discountArray = [];
        var finalPriceArray = [];

        function addValues(sizesCount, removeItem) {
            if (removeItem == false) {
                var sizes = $("select[name='sizes" + sizesCount + "']").val();
                var quantity = $("input[name='quantity" + sizesCount + "']").val();
                var actualPrice = $("input[name='actualPrice" + sizesCount + "']").val();
                var discount = $("input[name='discount" + sizesCount + "']").val();
                var finalPrice = $("input[name='finalPrice" + sizesCount + "']").val();

                sizesArray.push(sizes)
                quantityArray.push(quantity)
                actualPriceArray.push(actualPrice)
                discountArray.push(discount)
                finalPriceArray.push(finalPrice)
            }

            $.ajax({
                url: "/seller/products/variant/add-variant/<%=productData._id %>",
                method: "POST",
                headers: { 'Content-Type': 'application/json' },
                data: JSON.stringify({
                    _id: variantID,
                    sizes: sizesArray,
                    quantity: quantityArray,
                    actualPrice: actualPriceArray,
                    discount: discountArray,
                    finalPrice: finalPriceArray
                }),
                success: function (res) {
                    alert("Data Inserted")
                }
            })
        }

        $(document).ready(function () {
            coloursDropdown();
        });

        function coloursDropdown() {
            var selectobject = document.getElementById("colours");
            '<% if(variantData.length!=0){ var j=1; variantData.forEach(function(data){ %>'
            for (var i = 0; i < selectobject.length; i++) {
                if (selectobject.options[i].value == '<%= data.colours %>')
                    selectobject.remove(i);
            }
            '<% j++; }) } %>'

        }

    </script>

    <script>
        function moreItems(counter) {

            var moreItems =

<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <title>Category Edit Page</title>
    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
</head>

<style>
    .item {
        position: relative;
        padding: 2px;
        display: inline-block;
        margin: 10px;
        border: 2px solid #555;
    }

    .notify-badge {
        position: absolute;
        right: -20px;
        top: -10px;
        background: red;
        text-align: center;
        border-radius: 5px 5px 5px 5px;
        color: white;
        padding: 5px 10px;
        font-size: 10px;
    }
</style>

<body>
    <div class="wrapper">
        <!-- sidebar navigation component -->
        <%- include('../sidebar') %>
            <!-- end of sidebar component -->
            <div id="body" class="active">
                <!-- navbar navigation component -->
                <%- include('../navbar') %>
                    <!-- end of navbar navigation -->
                    <div class="content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header fw-bold bg-dark text-light">EDIT CATEGORY</div>
                                        <div class="card-body">
                                            <h5 class="card-title"></h5>
                                            <form action="/admin/category/edit-category/<%=categoryData._id %>"
                                                method="post" enctype="multipart/form-data" class="needs-validation"
                                                novalidate accept-charset="utf-8">
                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="productName" class="form-label">Category
                                                            Image</label>
                                                    </div>
                                                </div>

                                                <div class="row g-2">

                                                    <div class="mb-3 col-md-2">
                                                        <div class="item">

                                                            <img src="<%=categoryData.catImage %>" style="width: 100%;">


                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-2">
                                                        <!-- <button type="button" id="files"
                                                onclick="document.getElementById('file').click(); return false;"
                                                class="btn btn-outline-primary">Change Image

                                            </button> -->
                                                        <label for="text" class="form-label">Change Image:
                                                            <span class="text-muted">(Optional)</span>
                                                        </label>

                                                    </div>
                                                    <div class="mb-3 col-md-10">
                                                        <!-- <a href="/admin/category/change-image/<%=categoryData._id%> %>">
                                                Hello</a>
                                                 -->
                                                        <input type="file" class="form-control" name="catImage"
                                                            accept="image/*" id="file">
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <div class="invalid-feedback">Please Choose an Image.
                                                        </div>


                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="text" class="form-label">Category Name</label>
                                                    <input type="text" value="<%=categoryData.catName %>" name="catName"
                                                        placeholder="Enter Category" class="form-control" required>
                                                    <div class="valid-feedback">Looks good!</div>
                                                    <div class="invalid-feedback">Please Choose a Category.
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="text" class="form-label">Sub-Category</label>
                                                    <input type="text" value='<%=categoryData.sub_category %>'
                                                        name="sub_category" placeholder="Enter Sub-Category"
                                                        class="form-control" required>
                                                    <div class="valid-feedback">Looks good!</div>
                                                    <div class="invalid-feedback">Please Choose a Subcategory.
                                                    </div>
                                                </div>



                                                <div class="mb-3 col-md-4">
                                                    <label for="variant" class="form-label">Variant</label>
                                                    <select name="variant" class="form-select"  id="variant" required>
                                                            <option value="<%=categoryData.variant %>" selected>
                                                                <%=categoryData.variant %>
                                                            </option>
                                                            <% if(categoryData.variant == "Available"){ %>
                                                                <option value="Unavailable">
                                                                    Unavailable
                                                                </option>
                                                                <% } else{ %>
                                                                <option value="Available">
                                                                    Available
                                                                </option>
                                                                <% } %>
                                                           

                                                    </select>
                                                </div>

                                                <div class="mb-3">

                                                    <button type="submit" class="btn btn-primary">Submit

                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>


    <script>
        // let element = document.getElementById('status');
        // element.value = '<%=categoryData.status %>';

<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <title>Edit Category</title>
    <link href="/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/seller/editImages.css" rel="stylesheet">
    <link href="/css/master.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <%- include('../sidebar') %>
            <div id="body" class="active">
                <%- include('../navbar') %>
                    <div class="content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-header fw-bold bg-dark text-light">EDIT CATEGORY</div>
                                        <div class="card-body">
                                            <h5 class="card-title"></h5>
                                            <form action="/admin/category/edit-category/<%=categoryData._id %>"
                                                method="post" enctype="multipart/form-data" class="needs-validation"
                                                novalidate accept-charset="utf-8">
                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-12">
                                                        <label for="productName" class="form-label">Category
                                                            Image</label>
                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-2">
                                                        <div class="item">
                                                            <img src="<%=categoryData.catImage %>" style="width: 100%;">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row g-2">
                                                    <div class="mb-3 col-md-2">
                                                        <label for="text" class="form-label">Change Image:
                                                            <span class="text-muted">(Optional)</span>
                                                        </label>
                                                    </div>
                                                    <div class="mb-3 col-md-10">
                                                        <input type="file" class="form-control" name="catImage"
                                                            accept="image/*" id="file">
                                                        <div class="valid-feedback">Looks good!</div>
                                                        <div class="invalid-feedback">Please Choose an Image.
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="text" class="form-label">Category Name</label>
                                                    <input type="text" value="<%=categoryData.catName %>" name="catName"
                                                        id="catName" placeholder="Enter Category" class="form-control"
                                                        required>
                                                    <div class="valid-feedback">Looks good!</div>
                                                    <div class="invalid-feedback">Please Choose a Category.
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="text" class="form-label">Sub-Category</label>
                                                    <input type="text" value='<%=categoryData.sub_category %>'
                                                        name="sub_category" placeholder="Enter Sub-Category"
                                                        class="form-control" required>
                                                    <div class="valid-feedback">Looks good!</div>
                                                    <div class="invalid-feedback">Please Choose a Subcategory.
                                                    </div>
                                                </div>

                                                <div class="mb-3 col-md-4">
                                                    <label for="variant" class="form-label">Variant</label>
                                                    <select name="variant" class="form-select" id="variant" required>
                                                        <option value="<%=categoryData.variant %>" selected>
                                                            <%=categoryData.variant %>
                                                        </option>
                                                        <% if(categoryData.variant=="Available" ){ %>
                                                            <option value="Unavailable">
                                                                Unavailable
                                                            </option>
                                                            <% } else{ %>
                                                                <option value="Available">
                                                                    Available
                                                                </option>
                                                                <% } %>
                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <button type="submit" class="btn btn-primary" id="submitData">
                                                        <i class="fas fa-save">
                                                        </i> Save Changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script>
        var catNameBeforeEdit = '<%= categoryData.catName%>'
        $(document).on('click', '#submitData', function (e) {
            var catName = document.getElementById("catName").value;

            '<% if(catData.length!=0){ var i=1; catData.forEach(function(data){ %>'
            if (catName == '<%= data.catName %>' && catName != catNameBeforeEdit) {
                e.preventDefault();
                swal({
                    title: "Category with the same name already exists!",
                    text: "Try editting the same category or adding a new one.",
                    icon: "warning",
                    dangerMode: true,
                })
            }
            '<% i++; })}%>'
        }); 
    </script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/form-validator.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>